<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp">

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:background="@drawable/round_rectangle"

        android:text="맛있으면 강아지 보여줌"
        android:textSize="18sp"
        android:textColor="@color/tulip_noir"
        android:padding="3dp"
        />

    <TextView
        android:id="@+id/scoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:text="3.5/5"
        android:textColor="@color/tulip_noir"
        android:textSize="18sp"

        android:padding="3dp"

        android:background="@color/yellow"
        />

    <ImageView
        android:id="@+id/reviewImg"
        android:layout_width="80dp"
        android:layout_height="80dp"

        app:layout_constraintTop_toBottomOf="@id/userName"
        app:layout_constraintStart_toStartOf="parent"

        android:src="@drawable/round_rectangle"

        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/reviewText"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintStart_toEndOf="@id/reviewImg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/reviewImg"
        app:layout_constraintBottom_toBottomOf="@id/reviewImg"

        android:layout_marginStart="10dp"

        android:background="@color/white"
        />

    <Button
        android:id="@+id/reportBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reviewImg"

        android:text="신고하기"
        android:textSize="18sp"
        android:textColor="@color/tulip_noir"

        android:background="@drawable/for_button_with_round_line"

        android:layout_marginTop="5dp"
        />

    <Button
        android:id="@+id/modifyBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintEnd_toStartOf="@id/reportBtn"
        app:layout_constraintTop_toBottomOf="@id/reviewImg"

        android:text="수정하기"
        android:textSize="18sp"
        android:textColor="@color/tulip_noir"

        android:background="@drawable/for_button_with_round_line"

        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"

        android:visibility="invisible"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reportBtn"

        android:layout_marginTop="5dp"

        android:background="@color/tulip_noir"
        />


</androidx.constraintlayout.widget.ConstraintLayout>