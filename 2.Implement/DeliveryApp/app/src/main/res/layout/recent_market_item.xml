<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recentMarketBtn"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:background="@drawable/round_rectangle"
    android:padding="10dp">

    <TextView
        android:id="@+id/marketName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        android:text="삼성 마트"
        android:textSize="22sp"
        android:textColor="@color/tulip_noir"
        />
    <TextView
        android:id="@+id/marketScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toBottomOf="@id/marketName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/marketName"

        android:text="3.5/5"
        android:textSize="18sp"
        android:textColor="@color/tulip_noir"

        android:background="@color/yellow"
        android:padding="5dp"
        />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        app:layout_constraintTop_toBottomOf="@id/marketName"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="5dp"

        android:background="@color/sky"
        />
    
    <TextView
        android:id="@+id/marketAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/marketName"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"

        android:text="서울특별시 xx구 xx동 2310-29"
        android:textSize="18sp"
        android:textColor="@color/tulip_noir"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/marketDescription"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/marketAddress"

        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"

        android:text="40년 전통의 중국집"
        android:textSize="18sp"
        android:textColor="@color/tulip_noir"
        android:gravity="center"
        />

</androidx.constraintlayout.widget.ConstraintLayout>