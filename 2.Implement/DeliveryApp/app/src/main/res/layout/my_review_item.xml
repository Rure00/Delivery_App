<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp">

    <TextView
        android:id="@+id/marketName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:background="@drawable/round_rectangle"

        android:text="삼성마트"
        android:textSize="18sp"
        android:textColor="@color/tulip_noir"
        android:padding="5dp"


        />

    <TextView
        android:id="@+id/reviewDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintEnd_toStartOf="@id/scoreText"
        app:layout_constraintTop_toTopOf="@id/scoreText"

        android:layout_marginEnd="10dp"
        android:padding="5dp"

        android:text="2022/11/07"
        android:textSize="18sp"
        android:textColor="@color/tulip_noir"
        />

    <TextView
        android:id="@+id/scoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:padding="5dp"

        android:text="3.5/5"
        android:textStyle="bold"
        android:textColor="@color/tulip_noir"
        android:textSize="18sp"

        android:background="@color/yellow"

        />

    <TextView
        android:id="@+id/reviewText"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/marketName"

        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="5dp"

        android:lines="4"

        android:background="@drawable/round_rectangle"
        android:padding="5dp"
        />

    <Button
        android:id="@+id/removeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reviewText"

        android:text="삭제하기"
        android:textSize="18sp"
        android:textColor="@color/tulip_noir"

        android:background="@drawable/for_button_with_round_line"

        android:layout_marginTop="5dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/removeBtn"

        android:layout_marginTop="5dp"

        android:background="@color/grey"
        />

</androidx.constraintlayout.widget.ConstraintLayout>