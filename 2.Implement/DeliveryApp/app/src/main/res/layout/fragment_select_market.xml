<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.home.main.SelectMarketFragment">

        <TextView
            android:id="@+id/marketNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            android:gravity="center"
            android:text="삼성 마트"
            android:textSize="18sp"
            android:textColor="@color/black"

            android:background="@color/sky"

            android:padding="5dp"
            />

        <Button
            android:id="@+id/marketScoreBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            android:minWidth="0dp"
            android:minHeight="0dp"

            android:text="3.5/5"
            android:textSize="18sp"
            android:textColor="@color/black"

            android:background="@drawable/score_button"
            android:paddingVertical="7dp"
            android:paddingHorizontal="10dp"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/marketInfo"
            android:layout_width="0dp"
            android:layout_height="0dp"

            app:layout_constraintTop_toBottomOf="@+id/marketNameText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/orderButton"
            app:layout_constraintEnd_toEndOf="parent"


            android:layout_marginVertical="10dp"

            android:background="@color/sky">

                <TextView
                    android:id="@+id/marketAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"

                    android:text="서울특별시 xx구 xx동 1031-29"
                    android:textSize="18sp"
                    android:textColor="@color/tulip_noir"
                    android:gravity="center"
                    android:padding="5dp"
                    />

                <TextView
                    android:id="@+id/marketDescription"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/marketAddress"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"

                    android:gravity="center"
                    android:text="40년 된 전통 중국집"
                    android:textSize="18sp"
                    android:textColor="@color/tulip_noir"

                    android:layout_marginTop="10dp"
                        />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <Button
            android:id="@+id/orderButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            android:text="주문하기"
            android:textSize="18sp"
            android:textColor="@color/black"

            android:background="@color/sky"
            />

        <Button
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            android:text="뒤로가기"
            android:textSize="18sp"
            android:textColor="@color/black"

            android:background="@color/sky"
            />

</androidx.constraintlayout.widget.ConstraintLayout>