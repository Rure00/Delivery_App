<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/round_rectangle_sky_background"
    android:padding="10dp"
    android:layout_margin="5dp">

    <TextView
        android:id="@+id/marketName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:layout_margin="5dp"

        android:text="마켓이름"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/light_black"
        />

    <TextView
        android:id="@+id/priceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/checkButton"

        android:paddingVertical="10dp"
        android:paddingStart="10dp"

        android:text="0,000"
        android:textSize="20sp"
        android:textColor="@color/light_black"
        />

    <TextView
        android:id="@+id/won"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toEndOf="@id/priceText"
        app:layout_constraintBottom_toBottomOf="@id/priceText"

        android:layout_marginStart="5dp"
        android:layout_marginBottom="10dp"

        android:text="원"
        android:textSize="18sp"
        android:textColor="@color/light_black"
        />

    <Button
        android:id="@+id/checkButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/marketName"
        app:layout_constraintEnd_toEndOf="parent"

        android:text="확인하기"
        android:textSize="18sp"

        android:background="@drawable/round_rectangle"
        />

    <Button
        android:id="@+id/removeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/marketName"
        app:layout_constraintEnd_toStartOf="@id/checkButton"

        android:layout_marginEnd="10dp"

        android:text="지우기"
        android:textSize="18sp"

        android:background="@drawable/round_rectangle"
        />

</androidx.constraintlayout.widget.ConstraintLayout>